{% render 'button', block: block %}

{% schema %}
{
  "name": "Button",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "button_style",
      "options": [
        {
          "value": "link",
          "label": "Link"
        },
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ],
      "default": "primary",
      "label": "Button style"
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Button type",
      "default": "with-none",
      "options": [
        {
          "value": "with-icon",
          "label": "With icon & text"
        },
        {
          "value": "with-none",
          "label": "None"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Button"
    }
  ]
}
{% endschema %}
