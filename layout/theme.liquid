<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code | default: 'en' }}" dir="{% render 'direction' %}">
  <head>
    {% render 'head-meta' %}
    {% render 'meta-tags' %}
    {% render 'micodata-schema' %}

 
    {% if settings.animations_scroll_enable  %}
      <script src="{{ 'gsap.min.js' | asset_url }}" defer></script>
      <script src="{{ 'ScrollTrigger.min.js' | asset_url }}" defer></script>
      <script src="{{ 'SplitText.min.js' | asset_url }}" defer></script>
      <script src="{{ 'anim.js' | asset_url }}" defer></script>

      <link rel="preload" href="{{ 'anim.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
      <noscript><link rel="stylesheet" href="{{ 'anim.css' | asset_url }}"></noscript>
    {% endif %} 
    
    {% render 'js-variables' %}

    <script src="{{ 'lazysizes.min.js' | asset_url }}" defer></script> 
    <script src="{{ 'swiper.min.js' | asset_url }}" defer></script> 
    <script src="{{ 'theme.js' | asset_url }}" defer></script>

  
    {{ content_for_header }}

    {% render 'css-variables' %}
    {{ 'swiper.min.css' | asset_url | stylesheet_tag  }}
    {{ 'theme.css' | asset_url | stylesheet_tag }}

 
    {% unless settings.font_body_family.system? %}
      <link rel="preload" as="font" href="{{ settings.font_body_family | font_url }}" type="font/woff2" crossorigin>
    {% endunless %}

    {% unless settings.font_heading_family.system? %}
      <link rel="preload" as="font" href="{{ settings.font_heading_family | font_url }}" type="font/woff2" crossorigin>
    {% endunless %}

   

    <script>
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
    </script>
  </head>

  <body class="gradient">
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{ 'accessibility.skip_to_text' | t }}
    </a>

    {% sections 'header-group' %}

    <main id="MainContent" class="content-for-layout" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {%- if settings.cart_type == 'drawer' -%}
      {%- render 'side-cart' -%}
    {%- endif -%}

    {% render "toast-message" %}


  </body>
</html>
