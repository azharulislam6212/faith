{% comment %} Usage:
{% render 'icon-img' with image, class: 'icon-image' %} {% endcomment %}

{% if sizes == blank %}
    {% assign sizes = '(min-width: 2000px) 1000px, (min-width: 1445px) calc(100vw / 2), (min-width: 1200px) calc(100vw / 1.75), (min-width: 1000px) calc(100vw / 1.5), (min-width: 750px) calc(100vw / 3), 100vw' %}
  {% endif %}

{{
     image
    | image_url: width: 240
    | image_tag:
      loading: 'lazy',
      widths: '50, 75, 100, 150',
      sizes: sizes,
      class: class
  }}
  