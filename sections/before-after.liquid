{{- 'section-before-after.css' | asset_url | stylesheet_tag -}}


{%- liquid
  assign label_size = settings.label_size
  assign label_position = settings.label_position

-%}

<div
  class="before-after section--padding" data-color-scheme="{{ section.settings.color_scheme }}" style="{%  render 'section-spacing' %}">
     {% content_for 'block', type: '_section-header', id: 'before-after-section-header' %}

     <div class="{{ section.settings.width }}">
       <before-after-images>
          <div class="before-image--wrapper">
            <div class=" before-image ">
              {% content_for 'block', type: "_before", id:"before-image", label_size: label_size, label_position:label_position %}

            </div>
            <div class="after-image js-after-image">
              {% content_for 'block', type: "_after" , id:"after-image", label_size: label_size, label_position:label_position %}
            </div>

            <div class="split-cursor-wrapper">
              <div class="split-cursor js-split-cursor">
                <button class="drag-button" tabindex="0" role="button" aria-label="Split Cursor">
                   {% render 'icon' with 'drag-icon', width: '60', height: '80' %}
                </button>
              </div>
            </div>

          </div>
      </before-after-images>
      </div>
    </div>




