    <div class="{{section.settings.width}}">
      <div class="featured-collections__inner">
        <div role="region" aria-label="promo images" class="featured-collections__left-column">
          <div class="collection-promo__item collection-promo-fad-up">
            <a href="shop.html" class="collection-promo__img-wrap">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </a>
          </div>
          <div class="collection-promo__item collection-promo-fad-up">
            <a href="shop.html" class="collection-promo__img-wrap">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </a>
               <modal-opener class="product-selector__size-link p4" data-modal="#promo-video-modal">

            <button class="collection-promo__play-button" aria-haspopup="dialog">
